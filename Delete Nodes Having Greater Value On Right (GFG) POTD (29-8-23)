                                            			// Delete Nodes Having Greater Value On Right (GFG) POTD (29-8-23) //
                                            			// Linked List Using Reverse //
                                            			// Node ke right side me koi bhi badi value wali hogi to remove krdo or badi value ko likhdo //
                                            			// LinkedList = 12->15->10->11->5->6->2->3 => 15 11 6 3 //
                                            			// LinkedList = 10->20->30->40->50->60 => 60 //
                                            			// T.C = O(n), S.C = O(1) //

#include <bits/stdc++.h>
using namespace std;                                    

Node* reverse(Node* head)
{
    if(head==NULL)
    {
        return NULL;
    }
    
    Node* curr=head;
    Node* prev=NULL;
    Node* forward=NULL;
    
    while(curr!=NULL)
    {
        forward=curr->next;
        curr->next=prev;
        prev=curr;
        curr=forward;
    }
    
    return prev;
}

Node *compute(Node *head)
{
    // your code goes here
    if(head==NULL || head->next==NULL)
    {
        return head;
    }
    
    head=reverse(head);
    int maxi=head->data;
    
    Node* temp=head;
    
    while(temp->next!=NULL)
    {
        if(temp->data <= temp->next->data)
        {
            maxi=max(maxi, temp->next->data);
            temp=temp->next;
        }
        else
        {
            temp->next=temp->next->next;
        }
    }
    
    return reverse(head);
}

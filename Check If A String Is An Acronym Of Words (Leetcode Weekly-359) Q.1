                    			// Check If A String Is An Acronym Of Words (Leetcode Weekly-359) Q.1 //
                    			// Given string array WORDS and string S //
                    			// S is acronym of words if First character of each string in Words matches with string S //
                    			// Words=["apple", "banana"], S="ab" => True (apple=a, banana=b => ab) //
                    			// words=["alice","bob","charlie"], s="abc" => True //
                    			// words = ["an","apple"], s = "a" => False (aa!=a) //
                    			// T.C = O(n), S.C = O(1) //

#include <bits/stdc++.h>
using namespace std;

bool isAcronym(vector<string>& words, string s) 
{
    int wsize=words.size();
    int ssize=s.size();
    int k=0;
    
    if(wsize!=ssize)
    {
        return false;
    }
    
    for(int i=0;i<wsize;i++)
    {
        string t=words[i];
        
        if(t[0]==s[k])
        {
            k++;
            continue;
        }
        else
        {
            return false;
        }
    }
    
    return true;
}
